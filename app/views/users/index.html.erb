<h1>Listing Users</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Number of trips posted</th>
    <th>Number of trips joined</th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= Trip.where(user_id: user.id).count %></td>
        <td><%= user.users_trips.count %></td>
      </tr>
  <% end %>
  </tbody>
</table>